<Window x:Class="WindRose.mainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ruža Vjetrova" Height="780" Width="980"
        WindowStartupLocation="CenterScreen" Icon="/WindRose.png">
    <DockPanel x:Name="RootDock" Background="{DynamicResource WindowBackgroundBrush}">
        <Border DockPanel.Dock="Top" Background="{DynamicResource MenuBackgroundBrush}" HorizontalAlignment="Stretch">
            <Menu x:Name="MainMenu" Style="{DynamicResource ThemedMenuStyle}">
                <MenuItem x:Name="FileMenuItem">
                    <MenuItem x:Name="ExitMenuItem" Click="ExitMenuItem_Click"/>
                </MenuItem>

                <MenuItem x:Name="LanguageMenuItem"/>

                <MenuItem x:Name="ThemesMenuItem">
                    <MenuItem x:Name="LightThemeMenuItem" Click="LightThemeMenuItem_Click" IsCheckable="True"/>
                    <MenuItem x:Name="DarkThemeMenuItem" Click="DarkThemeMenuItem_Click" IsCheckable="True"/>
                </MenuItem>

                <MenuItem x:Name="AboutMenuItem" Click="AboutMenuItem_Click"/>
            </Menu>
        </Border>

        <Grid x:Name="MainGrid" Margin="16" Style="{DynamicResource MainPanelGridStyle}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                <TextBlock x:Name="InputLabel" VerticalAlignment="Center" FontSize="16" Margin="0,0,8,0"/>
                <TextBox x:Name="AngleTextBox" Width="120" FontSize="16" VerticalContentAlignment="Center" Margin="0,0,8,0" PreviewTextInput="AngleTextBox_PreviewTextInput"
                         CommandManager.PreviewExecuted="AngleTextBox_PreviewExecuted"/>
                <Button x:Name="ShowButton" Width="120" FontSize="16" Click="ShowButton_Click" Margin="0,0,8,0" Style="{DynamicResource ThemedButtonStyle}" IsDefault="True"/>

                <TextBlock x:Name="WindLabelText" VerticalAlignment="Center" FontSize="16" Margin="16,0,8,0"/>
                <ComboBox x:Name="WindComboBox" Width="160" FontSize="16" SelectionChanged="WindComboBox_SelectionChanged" Style="{DynamicResource ThemedComboBoxStyle}" ScrollViewer.VerticalScrollBarVisibility="Disabled"/>
            </StackPanel>

            <StackPanel Grid.Row="2" Margin="0,0,0,12">
                <TextBlock x:Name="DirectionResultText" FontWeight="Bold" FontSize="16" Margin="0,0,0,6"/>
                <TextBlock x:Name="WindNameResultText" FontWeight="Bold" FontSize="16" TextWrapping="Wrap"/>
                <TextBlock x:Name="ThetaReadoutText" FontWeight="SemiBold" FontSize="14" Margin="0,6,0,0"/>
            </StackPanel>

            <Grid Grid.Row="3">
                <Viewbox Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Canvas x:Name="RoseCanvas" Width="540" Height="540"/>
                </Viewbox>
            </Grid>
        </Grid>
    </DockPanel>
</Window>
